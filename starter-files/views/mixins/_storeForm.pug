//- VIEW MIXINS
mixin storeForm(store = {})
	form(action=`/add/${store._id || ""}` method="POST" class="card")
		label(for="name") Store Name
		input(type="text" name="name" value=store.name)
		label(for="description") Store Description
		textarea(name="description")= store.description
		- const choices = ["WiFi", "Open late", "Vegetarian Options", "Family Friendly", "Licensed"]
		- const tags = store.tags || []
		ul.tags 
			each choice in choices
				li.tag.tag__choice
					input(type="checkbox" id=choice value=choice name="tags" checked=(tags.includes(choice)))
					label(for=choice) #{choice}
		input(type="submit" value="Save Store" class="button")